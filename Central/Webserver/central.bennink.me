server {
    listen 10.4.0.10:443 default_server ssl;
    server_name central.bennink.me;

    location / {
            root /var/cache/munin/www;
            auth_basic "Linux services Munin";
            auth_basic_user_file /etc/nginx/.htpasswd;
    }

    ssl_certificate             /etc/ssl/certs/central.bennink.me.crt;
    ssl_certificate_key         /etc/ssl/private/central.bennink.me.key;
    ssl_client_certificate      /etc/ssl/certs/lets_encrypt_root.crt;